<main>
    <div class="container-fluid">
        <!-- Sidebar -->
        <nav class="sidebar">
            <ul>
                <li><a href="dashboard.ejs">Dashboard</a></li>
                <li><a href="appointments.js">Appointments</a></li>
                <li><a href="../partials/chat.ejs">Chat</a></li>
                <li><a href="analytics.ejs">Analytics</a></li>
            </ul>
        </nav>
        <!-- Main Content -->
        <div class="content">
            <header class="header">
                <h1>Welcome,  <%= Patient.first_name %></h1>
            </header>

            <section class="dashboard">
                <h2>Upcoming Appointments</h2>
                <div id="appointmentContainer" class="appointment-container">
                    <% appointments.forEach(appointment => { %>
                        <div class="appointment-card">
                            <h3><%= appointment.title %></h3>
                            <p><%= appointment.date %></p>
                            <p><%= appointment.time %></p>
                        </div>
                    <% }) %>
                </div>
            </section>
            <!-- Include Map Section -->
            <section class="map-section">
                <h2>Find Health-Care Providers Near You</h2>
                <div id="map" style="height: 400px; width: 100%;"></div>
            </section>
            <!-- Include Chat Widget -->
            <%- include('../partials/chat.ejs') %>
            <button onclick="toggleChat()">Open Chat</button>
            <!-- AI Routes Integration -->
            <section class="ai-section">
                <h2>AI Health Tools</h2>
                <button onclick="checkSymptoms()">Check Symptoms</button>
                <button onclick="determineTriage()">Determine Triage</button>
                <button onclick="predictTrends()">Predict Trends</button>
                <div id="aiResults" class="ai-results"></div>
            </section>
            <!-- IoT Data Chart Section -->
            <section class="iot-section">
                <h2>Real-Time IoT Data</h2>
                <button onclick="fetchData()">Show IoT Data</button>
                <canvas id="iotDataChart"></canvas>
            </section>
        </div>
    </div>
</main>



