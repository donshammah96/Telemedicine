<fieldset>
    <legend>Health Center Details</legend>
    <div class="form-group">
        <label for="health_center_name">Health Center Name:</label>
        <input type="text" class="form-control" name="health_center_name" id="health_center_name" required>
    </div>
    <div class="form-group">
        <label for="health_center_address">Address:</label>
        <input type="text" class="form-control" name="address" id="health_center_address" required>
    </div>
    <div class="form-group">
        <label for="health_center_phone">Phone:</label>
        <input type="tel" class="form-control" name="phone" id="health_center_phone" required>
    </div>
    <div class="form-group">
        <label for="health_center_email">Email:</label>
        <input type="email" class="form-control" name="email" id="health_center_email" required>
    </div>
    <div class="form-group">
        <label>Center Location:</label>
        <div id="map" style="width: 100%; height: 300px; border: 1px solid #ccc;"></div>
        <input type="hidden" name="latitude" id="latitude">
        <input type="hidden" name="longitude" id="longitude">
    </div>
</fieldset>
