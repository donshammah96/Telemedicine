<main>
    <div class="container mt-5">
        <h1 class="mb-4"><%= patient.first_name %> <%= patient.last_name %></h1>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Date of Birth</th>
                    <td><%= patient.date_of_birth %></td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td><%= patient.gender %></td>
                </tr>
                <tr>
                    <th>Illness</th>
                    <td><%= patient.illness %></td>
                </tr>
                <tr>
                    <th>Language</th>
                    <td><%= patient.language %></td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td><%= patient.address %></td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td><%= patient.phone_number %></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><%= patient.email_address %></td>
                </tr>
            </tbody>
        </table>
        <a href="/patients" class="btn btn-primary">Back to Patients</a>
    </div>
</main>>