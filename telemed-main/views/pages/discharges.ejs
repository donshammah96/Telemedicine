<main>
    <div class="container mt-5">
        <h1 class="mb-4">Discharges</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Patient ID</th>
                    <th>Health Center ID</th>
                    <th>Discharge Date</th>
                    <th>Disposition</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% discharges.forEach(discharge => { %>
                    <tr>
                        <td><%= discharge.discharge_id %></td>
                        <td><%= discharge.patient_id %></td>
                        <td><%= discharge.health_center_id %></td>
                        <td><%= discharge.discharge_date %></td>
                        <td><%= discharge.discharge_disposition %></td>
                        <td><a href="/discharges/<%= discharge.discharge_id %>">View Details</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</main>>